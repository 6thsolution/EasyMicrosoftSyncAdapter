<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sixthsolution.easymicrosoftsyncadapterapp.MainActivity"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="12dp"
            >

            <Button
                android:id="@+id/add_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Account"
                />

            <Button
                android:id="@+id/refresh_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refresh Token"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            >

            <Button
                android:id="@+id/add_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Event"
                />

            <Button
                android:id="@+id/update_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Event"
                />

            <Button
                android:id="@+id/delete_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete Event"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="12dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/sync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sync"
            />

        <Button
            android:id="@+id/get_calendars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Get Calendars"
            />

        <Button
            android:id="@+id/get_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Get Events"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/status_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minLines="3"
        />

</LinearLayout>
